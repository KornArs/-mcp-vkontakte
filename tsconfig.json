{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/cursor-mcp-server.ts", "src/make-mcp-server.ts", "src/simple-http-server.ts", "src/vk-api.ts", "src/types.ts"],
  "exclude": ["node_modules", "dist", "src/http-server.ts", "src/index.ts"]
}
